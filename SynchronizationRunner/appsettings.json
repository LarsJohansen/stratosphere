{
  "footballDataApiOptions": {
    "baseUri": "http://api.football-data.org/v1",
    "teamEndpoint": "/teams",
    "competitionEndpoint": "/competitions",
    "leagueTableEndpoint": "/competitions/0/leagueTable"

  },
  "Logging": {
    "IncludeScopes": false,

    "Debug": {
      "LogLevel": {
        "Default": "Trace"
      }
    },
    "Console": {
      "LogLevel": {
        "Microsoft.AspNetCore.Mvc.Razor.Internal": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor.Razor": "Debug",
        "Microsoft.AspNetCore.Mvc.Razor": "Error",
        "Default": "Trace"
      }
    },
    "LogLevel": {
      "Default": "Trace"
    }
  },

  "Serilog": {
    "LogFile": "Synchrunner.log",
    "MinimumLevel": "Verbose"
  }
}
